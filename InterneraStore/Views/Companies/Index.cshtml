@model IEnumerable<InterneraStore.Models.Company>

@{
    ViewBag.Title = "Index";
}

<h2>@InterneraStore.Resources.Resource.Companies</h2>

<p>
    @Html.ActionLink(InterneraStore.Resources.Resource.Create, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @InterneraStore.Resources.Resource.Name
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(InterneraStore.Resources.Resource.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(InterneraStore.Resources.Resource.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(InterneraStore.Resources.Resource.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
